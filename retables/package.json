{
    "name": "retables",
    "version": "0.1.0",
    "description": "Yet another react table library",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/retables/retables.git"
    },
    "homepage": "https://retables.github.io",
    "author": "Marco Raffaello",
    "files": [
        "dist"
    ],
    "module": "./dist/lib.es.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/lib.es.js"
        }
    },
    "scripts": {
        "dev": "vite build --watch --emptyOutDir=false",
        "build": "vite build",
        "test": " npx cypress open",
        "test-cli:chrome": "npx cypress run --component --browser chrome",
        "test-cli:firefox": "npx cypress run --component --browser firefox",
        "test-cli:electron": "npx cypress run --component --browser electron",
        "prepack": "clean-package",
        "postpack": "clean-package restore"
    },
    "dependencies": {
        "fast-equals": "^4.0.3"
    },
    "devDependencies": {
        "@emotion/react": "^11.10.6",
        "@emotion/styled": "^11.10.6",
        "@rollup/plugin-terser": "^0.4.0",
        "@types/node": "^18.13.0",
        "@types/react": "^18.0.27",
        "@types/react-dom": "^18.0.10",
        "@vitejs/plugin-react-swc": "^3.0.0",
        "clean-package": "^2.2.0",
        "cypress": "^12.7.0",
        "react": "^17.0.0",
        "react-dom": "^17.0.0",
        "react-is": "^18.2.0",
        "terser": "^5.16.5",
        "typescript": "^4.9.3",
        "vite": "^4.1.0",
        "vite-plugin-dts": "^1.7.3"
    },
    "peerDependencies": {
        "react": "^17.0.0 || ^18.0.0",
        "react-dom": "^17.0.0 || ^18.0.0"
    },
    "clean-package": {
        "remove": [
            "script",
            "devDependencies",
            "preinstall",
            "postinstall"
        ]
    }
}
